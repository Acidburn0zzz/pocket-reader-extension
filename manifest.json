{
    "name": "New Tab - Pocket",
    "version": "1.1.5",
    "manifest_version": 2,
    "description": "Unofficial Pocket new tab extension for Chrome. See all your Pocket links right on new tab.",
    "author": "Gert Gl√ºkmann @glukmann",
    "homepage_url": "http://gglukmann.github.io/pocket",
    "icons": {
        "16": "icon16.png",
        "128": "icon128.png",
        "256": "icon256.png"
    },
    "browser_action": {
        "default_icon": "icon16.png"
    },
    "chrome_url_overrides" : {
        "newtab": "page.html"
    },
    "content_scripts": [{
        "js": [ "content.js" ],
        "matches": ["<all_urls>"]
    }],
    "background": {
      "scripts": ["background.js"]
    },
    "permissions": [
        "identity",
        "tabs",
        "https://*.getpocket.com/*"
    ]
}
