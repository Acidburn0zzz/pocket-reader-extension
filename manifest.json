{
    "name": "New Tab - Pocket",
    "version": "1.3.0",
    "manifest_version": 2,
    "description": "Unofficial Pocket new tab extension for Chrome and Firefox. See all your Pocket links right on new tab.",
    "author": "Gert Gl√ºkmann @glukmann",
    "homepage_url": "http://gglukmann.github.io/pocket",
    "icons": {
        "16": "assets/images/icon16.png",
        "32": "assets/images/icon32.png",
        "48": "assets/images/icon48.png",
        "64": "assets/images/icon64.png",
        "128": "assets/images/icon128.png",
        "256": "assets/images/icon256.png"
    },
    "browser_action": {
        "default_icon": {
            "16": "assets/images/icon16.png",
            "32": "assets/images/icon32.png"
        }
    },
    "chrome_url_overrides": {
        "newtab": "index.html"
    },
    "content_scripts": [{
        "js": ["assets/js/content.js"],
        "matches": ["*://*/*"]
    }],
    "background": {
      "scripts": ["assets/js/background.js"]
    },
    "permissions": [
        "identity",
        "tabs",
        "https://*.getpocket.com/*",
        "https://getpocket.com/",
        "https://getpocket.com/a/read/"
    ]
}
